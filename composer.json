{
    "name": "hawara/guagua",
    "description": "Basic command, query and event buses in PHP",
    "license": "MIT",
    "autoload": {
        "psr-4": {
            "Guagua\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "authors": [
        {
            "name": "Carlos Capote PÃ©rez-Andreu",
            "email": "carlos.capote@hawara.es"
        }
    ],
    "require": {
        "psr/container": "^2.0",
        "ramsey/uuid": "^4.7",
        "hawara/criba": "^1.0"
    },
    "require-dev": {
        "pestphp/pest": "^2.23",
        "psy/psysh": "^0.11.21",
        "laravel/pint": "^1.13",
        "mockery/mockery": "^1.6",
        "pestphp/pest-plugin-faker": "^2.0",
        "illuminate/database": "^10.28"
    },
    "suggest": {
        "illuminate/database": "Allows using Eloquent to store and retrieve asynchronous commands and events."
